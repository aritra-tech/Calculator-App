<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geekym.calculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/calculator_512"
        android:label="@string/app_name"
        android:roundIcon="@drawable/calculator_512"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calculator">
        <activity android:name="com.geekym.calculator.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.geekym.calculator.MainActivity"></activity>
    </application>

</manifest>